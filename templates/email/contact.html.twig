{# templates/email/contact.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
        .container { max-width: 600px; margin: 0 auto; padding: 20px; }
        .header { background-color: #f8f9fa; padding: 20px; margin-bottom: 20px; }
        .message { background-color: #fff; padding: 20px; border: 1px solid #ddd; }
    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <h2>New Contact Form Submission</h2>
        <p><strong>From:</strong> {{ contact.name }}</p>
        <p><strong>Email:</strong> {{ contact.email }}</p>
        <p><em>You can reply directly to this email to contact {{ contact.name }}.</em></p>
    </div>

    <div class="message">
        <h3>Message:</h3>
        <p>{{ contact.message|nl2br }}</p>
    </div>
</div>
</body>
</html>